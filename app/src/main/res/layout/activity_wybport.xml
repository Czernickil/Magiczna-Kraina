<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="@drawable/image7b"
    tools:context="com.example.p1.kraina1.wybport">

    <com.example.p1.kraina1.FlashButton4
        android:id="@+id/port1"
        android:layout_width="94dp"
        android:layout_height="241dp"
        android:layout_marginBottom="85dp"
        android:background="@android:drawable/menuitem_background"
        android:checked="true"
        android:scaleType="fitXY"
        android:text="ToggleButton"
        android:textOff=""
        android:textOn=""
        android:onClick="portals"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toRightOf="@+id/port3"
        app:layout_constraintRight_toLeftOf="@+id/port2"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <com.example.p1.kraina1.FlashButton4
        android:id="@+id/port2"
        android:layout_width="94dp"
        android:layout_height="241dp"
        android:layout_marginBottom="85dp"
        android:background="@android:drawable/menuitem_background"
        android:checked="true"
        android:scaleType="fitXY"
        android:text="ToggleButton"
        android:textOff=""
        android:textOn=""
        android:onClick="portall"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="28dp" />

    <com.example.p1.kraina1.FlashButton4
        android:id="@+id/port3"
        android:layout_width="94dp"
        android:layout_height="241dp"
        android:layout_marginBottom="85dp"
        android:layout_marginLeft="28dp"
        android:background="@android:drawable/menuitem_background"
        android:checked="true"
        android:scaleType="fitXY"
        android:text="ToggleButton"
        android:textOff=""
        android:textOn=""
        android:onClick="portalp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="28dp" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="0dp"
        android:layout_height="179dp"
        android:layout_marginEnd="17dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="25dp"
        android:text="Wybierz portal do którego chcesz się udać, lewy jest portalem większego ryzyka, prawy średniego, a środkowy to niespodzianka  "
        android:textAlignment="center"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

</android.support.constraint.ConstraintLayout>
