<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.p1.kraina1.PytanieLiterkowe"
    android:background="@drawable/pyto"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/pytanie"
        android:layout_width="0dp"
        android:layout_height="79dp"
        android:layout_marginBottom="57dp"
        android:layout_marginEnd="41dp"
        android:layout_marginLeft="41dp"
        android:layout_marginRight="41dp"
        android:layout_marginStart="41dp"
        android:text="Z rozsypanych liter ułóż wyraz i wprowadź go powyżej"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="19sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintHorizontal_bias="0.0" />

    <ImageButton
        android:id="@+id/button34"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/sprawdz"
        android:onClick="sprawdz"
        android:text="Sprawdź odpowiedź"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/pytanie"
        android:layout_marginBottom="151dp"
        app:layout_constraintHorizontal_bias="0.497" />

    <EditText
        android:id="@+id/odpp"
        android:layout_width="227dp"
        android:layout_height="53dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="11dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/tabbl"
        android:hint="Tu wprowadź odpowiedź"
        android:padding="2dp"
        android:paddingRight="5dp"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textSize="14sp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/pytanie"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button34"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <ImageView
        android:id="@+id/lit5"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="54dp"
        android:layout_marginRight="54dp"
        android:layout_marginTop="40dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/images"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <ImageView
        android:id="@+id/lit6"
        android:layout_width="0dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/imagez"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintRight_toRightOf="@+id/lit1"
        android:layout_marginTop="65dp"
        app:layout_constraintTop_toBottomOf="@+id/lit1"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/lit1" />

    <ImageView
        android:id="@+id/lit4"
        android:layout_width="0dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/imageo"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="@+id/lit5"
        android:layout_marginTop="65dp"
        app:layout_constraintTop_toBottomOf="@+id/lit5"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/lit5" />

    <ImageView
        android:id="@+id/lit1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="71dp"
        android:layout_marginStart="71dp"
        app:layout_constraintBottom_toBottomOf="@+id/lit5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/lit5"
        app:srcCompat="@drawable/imagek"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1" />

</android.support.constraint.ConstraintLayout>
