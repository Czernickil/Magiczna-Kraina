<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.p1.kraina1.PytanieLiterkowe"
    android:background="@drawable/pyto"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <TextView
        android:id="@+id/pytanie"
        android:layout_width="321dp"
        android:layout_height="54dp"
        android:layout_marginBottom="82dp"
        android:layout_marginLeft="46dp"
        android:layout_marginRight="46dp"
        android:layout_marginTop="70dp"
        android:text="Z rozsypanych liter ułóż Imię chłopca i wprowadź ją powyżej"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/odpp"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <ImageButton
        android:id="@+id/button34"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/sprawdz"
        android:onClick="sprawdz"
        android:text="Sprawdź odpowiedź"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/odpp"
        android:layout_marginTop="31dp"
        app:layout_constraintTop_toBottomOf="@+id/lit6"
        android:layout_marginBottom="50dp" />

    <EditText
        android:id="@+id/odpp"
        android:layout_width="227dp"
        android:layout_height="53dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="11dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/tabbl"
        android:hint="Tu wprowadź odpowiedź"
        android:padding="2dp"
        android:paddingRight="5dp"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textSize="14sp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/pytanie"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button34"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1" />

    <ImageView
        android:id="@+id/lit6"
        android:layout_width="100dp"
        android:layout_height="0dp"
        app:srcCompat="@drawable/imagee"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintRight_toLeftOf="@+id/lit4"
        app:layout_constraintBottom_toBottomOf="@+id/lit4"
        android:layout_marginEnd="11dp"
        app:layout_constraintTop_toTopOf="@+id/lit4"
        android:layout_marginRight="11dp"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/lit4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="81dp"
        app:layout_constraintBottom_toTopOf="@+id/odpp"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/imageu"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <ImageView
        android:id="@+id/lit1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="41dp"
        android:layout_marginTop="37dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/imagek"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintLeft_toLeftOf="@+id/lit6"
        android:layout_marginLeft="42dp" />

    <ImageView
        android:id="@+id/lit5"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:layout_marginEnd="48dp"
        android:layout_marginStart="60dp"
        app:srcCompat="@drawable/imagej"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        app:layout_constraintBottom_toBottomOf="@+id/lit1"
        app:layout_constraintRight_toRightOf="@+id/lit2"
        app:layout_constraintLeft_toLeftOf="@+id/lit4"
        app:layout_constraintTop_toTopOf="@+id/lit1"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="48dp" />

    <ImageView
        android:id="@+id/lit2"
        android:layout_width="100dp"
        android:layout_height="100dp"

        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toRightOf="@+id/lit4"

        app:srcCompat="@drawable/imager"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_editor_absoluteY="159dp" />

</android.support.constraint.ConstraintLayout>
