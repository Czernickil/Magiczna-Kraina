<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pyto"
    tools:context="com.example.p1.kraina1.pytzab">

    <TextView
        android:id="@+id/pytanie"
        android:layout_width="335dp"
        android:layout_height="98dp"
        android:layout_marginBottom="45dp"
        android:layout_marginEnd="53dp"
        android:layout_marginLeft="53dp"
        android:layout_marginRight="53dp"
        android:layout_marginStart="53dp"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="206dp"
        android:layout_marginLeft="105dp"
        android:layout_marginTop="198dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/prezent" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="264dp"
        android:layout_height="80dp"
        android:layout_marginRight="74dp"
        android:background="@android:drawable/menuitem_background"
        android:onClick="zle"
        android:scaleType="fitXY"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/zrobionen"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/imageButton2" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="264dp"
        android:layout_height="80dp"
        android:layout_marginRight="74dp"
        android:layout_marginTop="16dp"
        android:background="@android:drawable/menuitem_background"
        android:onClick="dobrze"
        android:scaleType="fitXY"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/zrobione" />

</android.support.constraint.ConstraintLayout>
